{
  "name": "@mediba/stylelint-config",
  "version": "2.0.0",
  "description": "A stylelint config at mediba",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "watch": "jest --watch",
    "prettier": "prettier --write --single-quote --trailing-comma all --semi false '__test__/**/*.js' '*.js'",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mediba-system/stylelint-config.git"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "mediba"
  ],
  "author": "Yu Kanamori",
  "license": "MIT",
  "engines": {
    "node": ">= 6.0.0"
  },
  "dependencies": {
    "stylelint-order": "^0.7.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.4",
    "stylelint": "~8.2.0"
  },
  "peerDependencies": {
    "stylelint": "^7.9.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "git add"
    ]
  }
}
